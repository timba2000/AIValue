[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Application"

[[workflows.workflow]]
name = "Start Application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"cd backend && npm run dev & cd frontend && npm run dev\""
waitForPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "cd backend && ./start.sh"]
build = ["sh", "-c", "cd frontend && npm ci && npm run build && cd ../backend && npm ci && npm run build"]

