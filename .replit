modules = ["nodejs-20", "postgresql-16"]

[[ports]]
localPort = 5001
externalPort = 80

[agent]
expertMode = true

[userenv]

[userenv.development]
PORT = "3000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Application"

[[workflows.workflow]]
name = "Start Application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"cd backend && npm run dev & cd frontend && npm run dev\""
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["node", "backend/dist/src/index.js"]
build = ["sh", "-c", "cd frontend && npm ci && npm run build && cd ../backend && npm ci && npm run build"]

[nix]
channel = "stable-25_05"
