modules = ["nodejs-20", "postgresql-16"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 5000

[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:1.0.0"]

[userenv]

[userenv.development]
PORT = "3000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Application"

[[workflows.workflow]]
name = "Start Application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"cd backend && npm run dev & cd frontend && npm run dev\""
waitForPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "cd backend && PORT=5000 ./start.sh"]
build = ["sh", "-c", "cd frontend && npm ci && npm run build && cd ../backend && npm ci && npm run build"]

[nix]
channel = "stable-25_05"
